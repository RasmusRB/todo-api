#!/bin/sh

# Git commit message hook to enforce Angular commit convention
# This hook validates commit messages follow: <type>: <description>

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Angular commit message pattern
pattern="^(feat|fix|docs|style|refactor|test|chore)(\(.+\))?: .{1,100}"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
    echo ""
    echo "❌ Invalid commit message format!"
    echo ""
    echo "Commit messages must follow Angular convention:"
    echo "  <type>: <description>"
    echo ""
    echo "Valid types:"
    echo "  feat:     New feature (triggers Docker build & deploy)"
    echo "  fix:      Bug fix (triggers Docker build & deploy)"
    echo "  docs:     Documentation changes only"
    echo "  style:    Code formatting (no logic change)"
    echo "  refactor: Code refactoring"
    echo "  test:     Adding tests"
    echo "  chore:    Maintenance tasks"
    echo ""
    echo "Examples:"
    echo "  feat: add user authentication"
    echo "  fix: resolve CORS issue"
    echo "  docs: update API documentation"
    echo ""
    echo "Your commit message:"
    echo "  $commit_msg"
    echo ""
    exit 1
fi

echo "✅ Commit message format is valid"
exit 0
